<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./static/css/style.css">
    <link rel="stylesheet" type="text/css" href="./static/css/footer.css">
    <title>Register</title>
</head>
<body>
    <%- include("../partials/header.ejs")%>
    <div class="container">
        <form method="POST">
            <h1>Register account</h1>
            <label for="username">User name:</label>
            <input type="text" placeholder="Enter username" name="username" required>
            <label for="password">Password:</label>
            <input type="password" placeholder="Enter password" id="password" name="password" required>
            <label for="password">Confirm password:</label>
            <input type="password" placeholder="Enter password again" id="confirm_password" name="confirm_password" required>
            <button type="submit" id="btn-register" onclick="validatePassword()">Register</button>
            <%- include("../partials/menu.ejs")%>
        </form>
    </div>
    <%- include("../partials/footer.ejs")%>
</body>
<script>
    const btnRegister = document.getElementById('btn-register');
    const passwordInput = document.getElementById('password');
    const confirmInput = document.getElementById('confirm_password');
    function validatePassword() {
        if (passwordInput.value !== confirmInput.value) {
            confirmInput.setCustomValidity("Vui lòng kiểm tra lại mật khẩu!");
        } else {
            confirmInput.setCustomValidity("");
        }
    }
    passwordInput.addEventListener("change", validatePassword);
    confirmInput.addEventListener("change", validatePassword);
</script>
</html>